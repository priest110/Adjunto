{
  "kind": "collectionType",
  "collectionName": "artigos",
  "info": {
    "singularName": "artigo",
    "pluralName": "artigos",
    "displayName": "Artigo",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string",
      "required": true
    },
    "categoria": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::categoria.categoria"
    },
    "descricao": {
      "type": "text",
      "required": false
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "comentarios": {
      "type": "json"
    },
    "likes": {
      "type": "integer",
      "default": 0
    },
    "autor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::autor.autor"
    },
    "hashtags": {
      "type": "json"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
